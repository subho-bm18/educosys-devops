pipeline {
    agent any
    stages {
        stage('Deploy to AWS') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS_ACCESS_KEY_ID']]) {
                    // Inside this block, the AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY
                    // environment variables are automatically set and masked
                    sh 'aws s3 ls' // Example AWS CLI command
                }
            }
        }
    }
}


